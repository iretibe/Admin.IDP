@{ Layout = "_LayoutLogin";
    ViewData["Title"] = "Login"; }

@model LoginViewModel

@section css {
    <link href="~/css/login.css" rel="stylesheet" />
}

@if (Model.EnableLocalLogin)
{

<section style="overflow-x: hidden;margin-top: 50px;height:97vh;">

    <section id="content">
        <div class="row">
            <div class="login-form">

                <partial name="_ValidationSummary" />

                <form asp-route="Login">

                    <input type="hidden" name="ReturnUrl" asp-for="ReturnUrl" />

                    <div class="avatar"><i class="material-icons">&#xE7FF;</i></div>

                    <h4 class="modal-title">Login to Your Account</h4>

                    <div class="form-group">
                        <input type="text" name="AssemblyCode" asp-for="AssemblyCode" placeholder="Assembly Code" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="text" name="Username" asp-for="Username" placeholder="Username" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="password" name="Password" asp-for="Password" placeholder="Password" autocomplete="off" class="form-control" />
                    </div>

                    <div class="form-group small clearfix">
                        @if (Model.AllowRememberLogin)
                          {
                                <label class="checkbox-inline"><input type="checkbox" name="RememberLogin" asp-for="RememberLogin" /> Remember you</label>
                          }

                        <a id="forgotPasswordLink" style="cursor: pointer; color:#4aba70; text-decoration: none" class="pull-right m-t-mini"><small>Forgot password?</small></a>
                    </div>

                    <button type="submit" value="login" class="btn btn-primary btn-block btn-lg" style="background: #42ae68">
                        Sign in
                    </button>

                </form>
            </div>
        </div>
    </section>

</section>
<script src="~/js/login.js"></script>
}
